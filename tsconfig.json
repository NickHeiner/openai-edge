{
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs",
      "sourceMap": true
    },
    "include": ["test/**/*"]
  },
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "outDir": "dist",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strict": true
  },
  "include": ["@types/**/*", "src/**/*"],
  "exclude": ["node_modules"]
}
